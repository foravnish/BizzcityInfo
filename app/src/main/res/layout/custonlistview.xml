<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="top"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_margin="5dp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawline"
        android:layout_margin="3dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/leadNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke4"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:text="sector  2"/>
            <LinearLayout
                android:id="@+id/qImage1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:background="@drawable/ract2"
                android:orientation="horizontal">
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="@dimen/dimen_5dp">

            <TextView
                android:id="@+id/require"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textSize="17dp"
                android:text="Rapunzel Rapunzel let down your golden hair! Bedtime Stories and Songs for Kids youtube channel presents ... "
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/cirlce2"
                android:gravity="center"
                android:text="25"
                android:textColor="#FFFF00"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.2dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:background="#c1c1c1"></View>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="5dp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="7">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textColor="@color/gray"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:text="pankaj"/>
                <TextView
                    android:id="@+id/subCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginTop="7dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/cate"
                    android:textColor="@color/gray"
                    android:text="sector  2 vasundhara"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/loca"
                    android:text="sector  2 vasundhara"/>

                <TextView
                    android:id="@+id/postedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/time"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray"
                    android:text="sector  2"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="right"
                android:gravity="right"
                android:weightSum="5">


                <ImageView
                    android:id="@+id/lock1"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    />
                <ImageView
                    android:id="@+id/lock2"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    />
                <ImageView
                    android:id="@+id/lock3"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    />
                <ImageView
                    android:id="@+id/lock4"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    />
                <ImageView
                    android:id="@+id/lock5"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>