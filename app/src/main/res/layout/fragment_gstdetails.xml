<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sntinfotech.bizzcityinfo.Fragments.GSTDetails">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/garyecolor"
            android:text="Business Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/gray_light1"
            android:text="Business Name as registered in GST"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:textColor="#111"
            android:background="@drawable/stroke"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"

            android:paddingTop="10dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/garyecolor"
            android:text="GST Number*"/>

        <EditText
            android:id="@+id/gstNo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:maxLength="15"
            android:background="@drawable/stroke"
            android:textColor="#111"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:paddingTop="10dp"
            android:textColor="@color/garyecolor"
            android:text="Registered Address*"/>

        <EditText
            android:id="@+id/regtAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#111"
            android:paddingLeft="10dp"
            android:background="@drawable/stroke"
            android:hint=""/>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="16dp"-->
            <!--android:layout_marginTop="2dp"-->
            <!--android:paddingTop="10dp"-->
            <!--android:textColor="@color/garyecolor"-->
            <!--android:text="PAN Number"/>-->

        <!--<EditText-->
            <!--android:id="@+id/panNo"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->

        <TextView
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:textColor="@color/garyecolor"
            android:text="@string/already_have_an_account"/>

        <Button
            android:id="@+id/submitNow"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="@drawable/stroke2"
            android:layout_marginTop="20dp"
            android:text="Save"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>
