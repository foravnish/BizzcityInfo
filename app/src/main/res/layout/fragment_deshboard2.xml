<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="vertical">



            <RelativeLayout
                android:id="@+id/rela1"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="180dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/slider2"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_alignParentTop="true" />


                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignTop="@+id/slider2"
                    android:layout_marginTop="130dp"/>


            </RelativeLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/myEnquiry"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:background="#40da6e">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/inbox"
                        android:backgroundTint="#fff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Enquiry"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/inbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:background="@drawable/stroke_dash"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/matchinLay"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="#d46fd7">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/matchingleads"
                        android:backgroundTint="#fff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matching Leads"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/matchLead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20dp"
                            android:background="@drawable/stroke_dash2"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/purchaLay"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:background="#559ae4">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/purchasedleads"
                        android:backgroundTint="#fff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchased Leads"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:layout_gravity="center"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/purLead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20dp"
                            android:background="@drawable/stroke_dash3"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/memberShip"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="#6a51e7">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/premium"
                        android:backgroundTint="#fff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Membership Type"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/expiry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/membershipType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18dp"
                            android:background="@drawable/stroke_dash4"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/transct"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:background="#e18239">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/transactions"
                        android:backgroundTint="#fff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transactions"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:layout_gravity="center"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/trans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20dp"
                            android:background="@drawable/stroke_dash5"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/creditPoint"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="#e44d3c">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/packagehistory"
                        android:backgroundTint="#fff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credit Points"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"/>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:background="@drawable/stroke_dash6"
                            android:layout_marginRight="10dp"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/strock_simple"
                    android:drawablePadding="0dp"
                    android:drawableTint="@color/blue"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Profile"
                    android:textColor="#111"

                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buyLead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/strock_simple"
                    android:drawablePadding="0dp"
                    android:drawableTint="@color/blue"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Buy Lead"
                    android:textColor="#111"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="10">





            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
