        <!--app:itemTextColor="@drawable/navigation_click"-->
        <!--android:background="#ffffff"-->
        <!--android:visibility="visible"-->
        <!--app:menu="@menu/navigation" />-->

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
